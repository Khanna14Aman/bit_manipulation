#include<bits/stdc++.h>
#define int long long 
using namespace std;
#define int long long
int mod = 1e9+7;

int powe(int base, int n)
{
	int ans = 1;
	while(n)
	{
		if(n%2==0)
		{
			base = (base*base) % mod;
			n /=2;
		}
		else
		{
			ans = (ans*base) % mod;
			n -= 1;
		}
	}
	return ans%mod;
}


signed main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        int k;
        cin>>n>>k;
        vector<int>v;
        int ans = 0;
        int temp = n;
        while(k!=0){
            v.emplace_back(k%2);   // storing set bits because pow(n,0)< pow(n,1)< pow(n,0)+pow(n,1) < pow(n,2) < pow(n,0)+pow(n,2) <pow(n,1)+pow(n,2) < pow(n,0)+pow(n,1)+pow(n,2) and this sequence will go on like this
            k = k/2;               // and it is given that special number is stored in ascending order
                                   // so we will check for a given number which bit is set and we collect them in vector
        }
        int no = v.size();         // the given above sequence will always same for every n so if we get a number k then we will find position of set bits in that k
        set<int>st;
        for(int i=0;i<no;i++){
            if(v[i]==1){
                st.insert(i);
                //cout<<v[i]<<" ";
            }
        }
        //cout<<endl;
        for(auto it:st){
            ans = (ans+powe(temp,it))%mod; // now we get the position of set bits in k so we will find pow(n,position of set bits)for every set bits in k
        }
        cout<<ans<<"\n";
    }
    return 0;
}
