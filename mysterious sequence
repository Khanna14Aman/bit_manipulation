const int mod = 1e9+7;
const int infl = 1e18+5;
const int inf = 2e5+5;

#define minpqint priority_queue<int, vi, greater<int>>
#define minpqpi priority_queue<pi,vpi,greater<pi>>
#define maxpqint priority_queue<int>
#define maxpqpi priority_queue<pi> 

int powe(int base, int n)
{
	int ans = 1;
	while(n)
	{
		if(n%2==0)
		{
			base = (base*base) % mod;
			n /=2;
		}
		else
		{
			ans = (ans*base) % mod;
			n -= 1;
		}
	}
	return ans%mod;
}

signed main()
{
    ios_base::sync_with_stdio(false);cin.tie(NULL);
    wtc(t){
        int n;
        int modi = 100;
        cin>>n;
        int b[n];
        for0(i,n){
            cin>>b[i];
        }
        int flag=0;
        	for(int i=0; i+1<n; ++i) {
		if((b[i]&b[i+1])!=b[i]) {      // suppose b[0]=2 and b[1]=5 so in any case we cannot make 2^something==5 (it is impossible to make 2^something==5)
			cout << "0\n";
			flag=1;
			break;
		}
	}
	if(flag){
	    continue;
	}
        if(n==1){
            cout<<"1\n";
            continue;
        }
        int ans = 1;
        for0(i,n-1){
            int x = __builtin_popcount(b[i]);    // if jth bit of element a[i] is set then at jth bit of a[i+1] can be set or unset (1/0) but if jth bit of a[i] is unset and jth bit of b[i+1] is set then jth bit of a[i+1]must be set or if jth bit of b[i+1] is unset then jth bit of a[i+1] should also be unset
            ans = (ans*powe(2,x))%mod;           // example==>b[0]=2 and b[1]=6 then we know that 2^4==6 (010 ^ 100 == 110)
        }
        cout<<ans<<"\n";
    }
    rtn 0;
}
